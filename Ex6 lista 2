import java.util.Scanner;

public class Ex6{
    public static void main(String[] args){
        int anos;
        int meses;
        int dias;
        Scanner input  = new Scanner(System.in);
        int anosEmDias;
        int mesesEmDias;
        int total;



        System.out.println("Diga sua idade em anos: ");
        anos = input.nextInt();
        System.out.println("diga sua idade em meses: ");
        meses = input.nextInt();
        System.out.println("diga sua idade em dias: ");
        dias = input.nextInt();

        anosEmDias = anos * 365;
        mesesEmDias = meses *30;

        total = anosEmDias + mesesEmDias + dias;

        System.out.println("vocẽ já viveu: " + total + " dias");





    }
}
