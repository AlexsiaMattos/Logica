import java.util.Scanner;

public class Ex6{
    public static void main(String[] args){
        int anos;
        int meses;
        int dias;
        Scanner input  = new Scanner(System.in);
        int a_em_dias;
        int m_em_dias;
        int total;



        System.out.println("Diga sua idade em anos: ");
        anos = input.nextInt();
        System.out.println("diga sua idade em meses: ");
        meses = input.nextInt();
        System.out.println("diga sua idade em dias: ");
        dias = input.nextInt();

        a_em_dias = anos * 365;
        m_em_dias = meses *30;

        total = a_em_dias + m_em_dias + dias;

        System.out.println("vocẽ já viveu: " + total + " dias");





    }
}
