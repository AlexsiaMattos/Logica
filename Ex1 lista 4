import java.util.Scanner;
public class Ex1list4 {
    public static void main(String[] args) {
        int a, b = 0,c = 0;
        Scanner scn = new Scanner(System.in);

        System.out.println("escreva um n√∫mero:");
        a = scn.nextInt();
        while(b<a){
            b = b +1;
            System.out.println("MOSTRANDO: " + b);
            c = c + b;
            System.out.println(c);
        } 

    }
    
}
