import java.util.Scanner;

public class Ex4{
    public static void main(String[] args){
       Scanner input = new Scanner(System.in);
       int v1;
       int v2;

       System.out.println("escreva um valor para v1: ");
       v1 = input.nextInt();
       System.out.println("escreva outro valor para v2: ");
       v2 = input.nextInt();

       if(v1>v2){
        System.out.println("o maior numero é da variável v1:" +v1);

       }
       else{
        System.out.println("o maior numero é da variável v2:" + v2);

       }

    }
}
