import java.util.Scanner;
public class Ex2list4 {
    public static void main(String[] args) {
        int a, b = 0, c = 0;
        Scanner scn = new Scanner(System.in);

        System.out.println("Escreva um n√∫mero: ");
        a = scn.nextInt();

        while (b < a){
            b  = b + 2;
            c = c + b;
            System.out.println(b + "separando" + c );
    

        }


    }
    
}
