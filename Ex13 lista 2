
import java.util.Scanner;

    
public class Ex13 {
    public static void main(String[] args) {
        Scanner input  = new Scanner(System.in);
        float avUm, avDois, media, sum;

        System.out.println("DIGITE A NOTA DA PRIMEIRA AVALIACAO: ");
        avUm = input.nextFloat();
        System.out.println("DIGITE A NOTA DA AVALIACAO DOIS: ");
        avDois = input.nextFloat();

        media = (avUm + avDois)/2;

        if (media >= 6.0){
            System.out.println("VOCE FOI APROVADO! SUA NOTA:  " + media );

        }
        else{
            System.out.println("VOCE FOI REPROVADO! SUA NOTA: " + media);

        }
    

    }
}
